<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Expanse Type:"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/expansetypeTVBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="expanse type"
        android:textSize="14sp"
        android:paddingVertical="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Amount:"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/expanseamountTVBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="expanse amount"
        android:textSize="14sp"
        android:paddingVertical="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Expanse Date:"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/expansedateTVBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="expanse date"
        android:textSize="14sp"
        android:paddingVertical="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Expanse Time:"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/expansetimeTVBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="expanse time"
        android:textSize="14sp"
        android:paddingVertical="10dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:text="Show Document"
        android:textSize="@dimen/Paragraph"
        android:textColor="@color/colorBackgroud"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:background="@drawable/button_rounding"
        android:layout_gravity="center"
        />

</LinearLayout>